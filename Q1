#include <iostream>
#include <string>
using namespace std;

struct item {
    int id;
    string name;
    float cost;
};

void sortItems(item items[], int n) {  
    item temp;
    for (int i = 0; i < n - 1; ++i) {
        for (int j = i + 1; j < n; ++j) {
            if (items[i].cost < items[j].cost) {  
                temp = items[i];
                items[i] = items[j];
                items[j] = temp;
            }
        }
    }
}

int main() {
    item items[8];  
    float totalCost = 0.0;

    cout << "Enter details for 8 items (id, name, cost):"<<endl;
    for (int i = 0; i < 8; ++i) {
        cout << "Item " << i + 1 << ":"<<endl;
        cout << "Enter ID: ";
        cin >> items[i].id;
        cin.ignore();
        
        cout << "Enter Name: ";
        getline(cin, items[i].name);
        cout << "Enter Cost: ";
        cin >> items[i].cost;
        totalCost += items[i].cost;   
    }

    sortItems(items, 8); 
    cout << "Sorted list of items based on cost (descending order):"<<endl;
    cout << "ID   Name                Cost"<<endl;
    for (int i = 0; i < 8; ++i) {
        cout << items[i].id << "    " << items[i].name << "    " << items[i].cost << endl;
    }

    float averageCost = totalCost / 8;
    cout << "\nAverage cost of all items: " << averageCost << endl;

    return 0;
}

